<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivDetailObat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_medi"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDetailJudulObat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:text="IMBOOST FORCE 10 KAPLET"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/ivDetailObat"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDetailPenjelasanObat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:text="PerStrip"
                app:layout_constraintStart_toEndOf="@+id/ivDetailObat"
                app:layout_constraintTop_toBottomOf="@+id/tvDetailJudulObat" />


            <TextView
                android:id="@+id/tvDetailHargaObat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="RP 80.000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivDetailObat"
                app:layout_constraintTop_toBottomOf="@+id/tvDetailPenjelasanObat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/btnKeranjangKurang"
                    android:layout_width="20dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_remove_circle_outline_24px_outlined" />

                <EditText
                    android:id="@+id/etKeranjangTotalObat"
                    android:layout_width="77dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="11sp" />


                <Button
                    android:id="@+id/btnKeranjangTambah"
                    android:layout_width="20dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_baseline_add_circle_outline_24" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>